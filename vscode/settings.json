{
  "telemetry.telemetryLevel": "off",
  "window.openFoldersInNewWindow": "on",
  "window.title": "${dirty}${rootName} | ${activeEditorMedium}",
  "window.zoomLevel": -1,
  "window.restoreWindows": "all",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Monokai",
  "workbench.colorCustomizations": {
    "editor.background": "#000",
    "tab.activeBorder": "#00ff6a",
    "editor.selectionBackground": "#ffff0087",
    "editor.selectionHighlightBackground": "#ffff0065",
    "editor.selectionHighlightBorder": "#00aeff",
    "editor.findMatchBackground": "#da86da62",
    "editor.findMatchHighlightBackground": "#d2f8f68a",
    "editor.findMatchBorder": "#f00",
    "selection.background": "#0091ff"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.tokenColorCustomizations": {
    "comments": { "foreground": "#fcb4ff", "fontStyle": "italic bold" },
    "strings": "#ff0"
  },
  "better-comments.tags": [
    { "tag": "!", "color": "#f00", "underline": true },
    { "tag": "?", "color": "#0ff", "underline": true },
    { "tag": "*", "color": "#0f0", "underline": true },
    { "tag": ":", "color": "#ff0", "underline": true },
    { "tag": "//", "color": "#00f", "backgroundColor": "#0f0" }
  ],
  "better-comments.multilineComments": false,
  "indentRainbow.errorColor": "rgba(255,100,200,0.6)",
  "terminal.integrated.cursorBlinking": true,
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.cursorStyle": "block",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.hover.enabled": true,
  "editor.quickSuggestions": true,
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[python]": { "editor.defaultFormatter": "ms-python.python" },
  "[php]": { "editor.defaultFormatter": "bmewburn.vscode-intelephense-client" },
  "[terraform]": { "editor.defaultFormatter": "hashicorp.terraform" },
  "[terraform-vars]": { "editor.defaultFormatter": "hashicorp.terraform" },
  "[markdown]": {
    "editor.quickSuggestions": true,
    "editor.formatOnSave": false
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "files.insertFinalNewline": true,
  "files.associations": {
    "**/dotfiles/vscode/**/*.json": "jsonc",
    ".env.*": "env",
    "*.module": "php",
    "*.hcl": "terraform"
  },
  "files.watcherExclude": { "**/node_modules/**": true },
  "json.schemas": [
    {
      "fileMatch": ["cypress.json"],
      "url": "https://on.cypress.io/cypress.schema.json"
    }
  ],
  "html.format.extraLiners": "",
  "css.lint.duplicateProperties": "warning",
  "emmet.triggerExpansionOnTab": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.typeErrors": false,
  "python.pythonPath": "~/.pyenv/shims/python",
  "python.defaultInterpreterPath": "~/.pyenv/shims/python",
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.completeFunctionParens": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": ["--indent-size=2"],
  "terraform-ls.experimentalFeatures": {
    "validateOnSave": true
  },
  "markdown.extension.toc.updateOnSave": false,
  "markdownlint.config": { "MD033": false },
  "markdown.preview.breaks": true,
  "markdown-preview-enhanced.codeBlockTheme": "monokai.css",
  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "remote.extensionKind": {
    "ms-azuretools.vscode-docker": "workspace"
  },
  "remote.containers.dotfiles.repository": "https://github.com/zuka-e/dotfiles.git",
  "remote.containers.dotfiles.targetPath": "~/dotfiles",
  "remote.containers.dotfiles.installCommand": "~/dotfiles/install.sh",
  "remote.containers.defaultExtensions": [
    // Intellisense
    "VisualStudioExptTeam.vscodeintellicode",
    "christian-kohler.path-intellisense", // Path completion
    // Highlighting
    "shardulm94.trailing-spaces", // Spaces
    "oderwat.indent-rainbow", // Each tab step
    "naumovs.color-highlight", // Web colors
    "irongeek.vscode-env", // .env
    "IBM.output-colorizer", // Logfile
    "mechatroner.rainbow-csv", // CSV
    "jeff-hykin.better-shellscript-syntax", // Shellscript
    "jeff-hykin.better-dockerfile-syntax", // Dockerfile
    // Utilities
    "aaron-bond.better-comments", // create many kinds of colorized comments
    "wmaurer.change-case", // (Command Palette -> Change Case xxx)
    "quicktype.quicktype", // paste JSON as code
    // Git
    "donjayamanne.githistory",
    "eamodio.gitlens",
    // JS/TS
    "dbaeumer.vscode-eslint", // ESLint
    "esbenp.prettier-vscode" // Prettier
  ]
}
