{
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  "window.openFoldersInNewWindow": "on",
  "window.title": "${dirty}${rootName} | ${activeEditorMedium}",
  "window.zoomLevel": -2,
  "window.restoreWindows": "all",
  "window.commandCenter": false,
  "workbench.editorAssociations": {
    "*.csv": "gc-excelviewer-csv-editor"
  },
  "workbench.layoutControl.enabled": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Monokai",
  "workbench.colorCustomizations": {
    "editor.background": "#000",
    "tab.activeBorder": "#00ff6a",
    "editor.selectionBackground": "#ffff0087",
    "editor.selectionHighlightBackground": "#ffff0065",
    "editor.selectionHighlightBorder": "#00aeff",
    "editor.findMatchBackground": "#da86da62",
    "editor.findMatchHighlightBackground": "#d2f8f68a",
    "editor.findMatchBorder": "#f00",
    "selection.background": "#0091ff"
  },
  "editor.bracketPairColorization.enabled": true,
  "editor.tokenColorCustomizations": {
    "comments": { "foreground": "#fcb4ff", "fontStyle": "italic bold" },
    "strings": "#ff0",
    "textMateRules": [
      {
        "scope": "markup.quote.markdown",
        "settings": {
          "foreground": "#f9a1f6",
          "fontStyle": "italic bold"
        }
      }
    ]
  },
  "better-comments.tags": [
    {
      "tag": " bug: ",
      "color": "#f00",
      "bold": true,
      "italic": true
    },
    {
      "tag": " todo: ",
      "color": "#0f0",
      "bold": true,
      "italic": true
    },
    {
      "tag": " info: ",
      "color": "#0ff",
      "bold": true,
      "italic": true
    }
  ],
  "better-comments.multilineComments": false,
  "indentRainbow.colors": [
    "rgba(255,127,255,0.2)",
    "rgba(255,255,64,0.2)",
    "rgba(127,255,127,0.2)"
  ],
  "indentRainbow.errorColor": "rgba(255,100,200,0.6)",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "'NotoMono Nerd Font'",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "explorer.autoRevealExclude": {
    "**/node_modules": false
  },
  "editor.renderControlCharacters": true,
  "editor.minimap.enabled": false,
  "editor.cursorStyle": "block",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.linkedEditing": true,
  "editor.hover.enabled": true,
  "errorLens.editorHoverPartsEnabled": {
    "messageEnabled": false,
    "buttonsEnabled": false
  },
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "git.openRepositoryInParentFolders": "always",
  "[python]": { "editor.defaultFormatter": "ms-python.python" },
  "[terraform]": { "editor.defaultFormatter": "hashicorp.terraform" },
  "[terraform-vars]": { "editor.defaultFormatter": "hashicorp.terraform" },
  "[nginx]": { "editor.defaultFormatter": "ahmadalli.vscode-nginx-conf" },
  "[markdown]": {
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.formatOnSave": false
  },
  "csv-preview.resizeColumns": "first",
  "csv-preview.lineNumbers": "source",
  "files.insertFinalNewline": true,
  "files.associations": {
    "**/dotfiles/vscode/**/*.json": "jsonc",
    ".env": "env",
    ".env.*": "env",
    ".npmrc": "ini",
    "supervisord.conf": "ini",
    "supervisord.*.conf": "ini",
    "*.module": "php",
    "*.hcl": "terraform"
  },
  "json.schemas": [
    {
      "fileMatch": ["package.json"],
      "url": "https://json.schemastore.org/package.json"
    },
    {
      // see: https://docs.cypress.io/guides/tooling/IDE-integration#Set-up-in-your-Dev-Environment-1
      "fileMatch": ["cypress.json"],
      "url": "https://on.cypress.io/cypress.schema.json"
    }
  ],
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": "/.github/workflows/*.yml",
    "https://json.schemastore.org/commitlintrc.json": ".commitlintrc.yml"
  },
  "html.format.extraLiners": "",
  "css.lint.duplicateProperties": "warning",
  "emmet.triggerExpansionOnTab": true,
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.tsdk": "./node_modules/typescript/lib",
  "python.defaultInterpreterPath": "~/.pyenv/shims/python",
  "python.terminal.activateEnvironment": false,
  "python.analysis.typeCheckingMode": "strict",
  "python.analysis.completeFunctionParens": true,
  "terraform.experimentalFeatures.validateOnSave": true,
  "markdown.extension.toc.updateOnSave": false,
  "markdownlint.config": { "MD033": false },
  "markdown.preview.breaks": true,
  "markdown-preview-enhanced.codeBlockTheme": "monokai.css",
  "markdown-preview-enhanced.breakOnSingleNewLine": false,
  "remote.extensionKind": {
    "ms-azuretools.vscode-docker": "workspace"
  },
  // cf. https://code.visualstudio.com/docs/devcontainers/containers#_personalizing-with-dotfile-repositories
  "dotfiles.repository": "https://github.com/zuka-e/dotfiles.git",
  "dotfiles.targetPath": "~/dotfiles",
  "dotfiles.installCommand": "install.sh",
  "dev.containers.defaultExtensions": [
    "streetsidesoftware.code-spell-checker",
    // Intellisense
    "VisualStudioExptTeam.vscodeintellicode",
    "christian-kohler.path-intellisense", // Path completion
    // Highlighting
    "shardulm94.trailing-spaces", // Spaces
    "oderwat.indent-rainbow", // Each tab step
    "naumovs.color-highlight", // Web colors
    "irongeek.vscode-env", // .env
    "IBM.output-colorizer", // Logfile
    "mechatroner.rainbow-csv", // CSV
    "jeff-hykin.better-shellscript-syntax", // Shellscript
    "jeff-hykin.better-dockerfile-syntax", // Dockerfile
    // Utilities
    "aaron-bond.better-comments", // create many kinds of colorized comments
    "wmaurer.change-case", // (Command Palette -> Change Case xxx)
    "quicktype.quicktype", // paste JSON as code
    // Git
    "donjayamanne.githistory",
    "eamodio.gitlens",
    // JS/TS
    "dbaeumer.vscode-eslint", // ESLint
    "esbenp.prettier-vscode" // Prettier
  ],
  "extensions.autoUpdate": false,
  "playwright.reuseBrowser": true
}
