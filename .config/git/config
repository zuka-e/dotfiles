[alias]
  discard-changes=restore --worktree
  unstage=restore --staged

  aa = add -A
  cp = cherry-pick
  l = log --stat
  poh = push origin HEAD
  rs = reset --soft
  rsh = reset --soft HEAD^
  rh = reset --hard
  rhh = reset --hard HEAD^

